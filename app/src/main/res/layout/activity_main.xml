<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.lp3i.fatah.utsmyapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PENDAFTARAN"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SISWA(I)SMK JAYA PEMBANGUNAN 2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sebelum mengisi formulir ini diharapkan walimurid telah melengkapi persyaratan yang ditentukan"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Depan"
            android:drawableLeft="@drawable/ic_action_account_circle"
            android:id="@+id/et.namadepan"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Belakang"
            android:id="@+id/et.namabelakang"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:drawableLeft="@drawable/ic_action_person_pin_circle"
            android:id="@+id/et.alamat"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telepon"
            android:drawableLeft="@drawable/ic_action_phone"
            android:id="@+id/et.telepon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lulusan"
            android:drawableLeft="@drawable/ic_action_people"/>

        <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMP"
        android:id="@+id/SMP"/>

        <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMP1"
        android:id="@+id/SMP1"/>

        <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MTS"
        android:id="@+id/MTS"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:entries="@array/Jenis_Kelamin"
            android:id="@+id/sp_jeniskelamin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilihan sekolah alternatif"
            android:drawableLeft="@drawable/ic_action_library_books"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/cb_SMKdwidaya"
            android:text="SMK Dwidaya"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cb_SMUdonbosco"
            android:text="SMU Don Bosco"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cb_SMUmerahputih"
            android:text="SMU Merah Putih"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cb_SMUsutarmadja"
            android:text="SMU Sutarmadja"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:id="@+id/bt_simpan"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
